<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/new_rec_back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/rubik_mono_one"
            android:textColor="#3D2B3D"
            android:gravity="center|center"
            android:onClick="sendBackMessageAlert"
            android:text="@string/left_arrow"
            android:textAllCaps="true"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:fontFamily="@font/rubik_mono_one"
            android:gravity="center|center"
            android:lineSpacingExtra="8sp"
            android:text="dodaj"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textColor="#9B1D20"
            android:textSize="25dp"
            android:typeface="monospace" />

        <Space
            android:layout_width="50dp"
            android:layout_margin="10dp"
            android:layout_height="10dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/new_rec_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@null"
        android:fontFamily="@font/rubik_mono_one"
        android:gravity="left|center"
        android:hint="Nazwa przepisu"
        android:textColor="#635D5C"
        android:lineSpacingExtra="8sp"
        android:singleLine="true"
        android:maxLines="1"
        android:lines="1"
        android:textSize="30sp"
        android:typeface="monospace" />

    <ListView
        android:id="@+id/new_rec_recipe_item_list"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/new_rec_accept"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/rubik_mono_one"
        android:textColor="#3D2B3D"
        android:gravity="center|center"
        android:onClick="accept"
        android:text="akceptuj"
        android:textAllCaps="true"
        android:textSize="20sp" />

</LinearLayout>